FROM ghcr.io/vexxhost/ubuntu-cloud-archive:2023.2@sha256:02180bfbcf768dfd32803a045a1eb20d6bc42307896cbc08f0943b52f29c750e
ENV PATH=/var/lib/openstack/bin:$PATH
RUN \
    apt-get update -qq && \
    apt-get install -qq -y --no-install-recommends \
        ca-certificates \
        libpython3.10 \
        lsb-release \
        python3-distutils \
        sudo && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
